<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:background="@android:color/white"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/play_button"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/play"
            android:paddingLeft="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Play recording"
            android:textColor="@color/secondary_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:src="@drawable/favorite"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/fav"
            android:paddingLeft="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Add to favourite"
            android:textColor="@color/secondary_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:src="@drawable/delete_button"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/delete"
            android:paddingLeft="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:text="Delete recording"
            android:textColor="@color/secondary_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:src="@drawable/muted"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/turn_off"
            android:paddingLeft="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:text="Turn off recording"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:textColor="@color/secondary_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            app:srcCompat="@drawable/ic_share_black_24dp"
            android:layout_height="35dp" />
        <TextView
            android:id="@+id/share"
            android:paddingLeft="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Share  recording "
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:textColor="@color/secondary_text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_cloud_computing" />

        <TextView
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg"
            android:clickable="true"
            android:drawablePadding="15dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="14sp"
            android:paddingTop="15dp"
            android:text="Upload to cloud"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/secondary_text"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>